@model Blog.Models.CommentaryViewModel
@{
    ViewBag.Title = "Create";
}

<div class="container">
    <div class="well">
        <h4 class="text-center">Comment on "@Model.ArticleTitle"</h4>
        @using (Html.BeginForm("Create", "Commentary", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
           
            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "7" })
                </div>
            </div>

            <div class="form-group hidden">
                @Html.LabelFor(m => m.ArticleId, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.ArticleId, new { @class = "form-control", @rows = "7" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Details", "Article", new { @id = Model.ArticleId }, new { @class = "btn btn-default" })
                    <input type="submit" value="Comment" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>
