@model List<Blog.Models.Category>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <h5 class="text-center">Choose a category:</h5>
            <div class="list-group">
                @foreach (var category in Model)
                {
                    <a href="ListByCategory/@category.Id" class="list-group-item">
                        <span class="badge">@category.Articles.Count</span>
                        @category.Name
                    </a>
                }
            </div>
        </div>
    </div>
</div>


